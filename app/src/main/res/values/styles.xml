<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#161515</item>
        <item name="android:textSize">15sp</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolBarTextStyle" parent="AppTheme">
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="Activity.NoTitleFullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Activity.NoTitle" parent="AppTheme">
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Common.EditText" parent="AppTheme">
        <item name="android:background">@drawable/edittext_background_selector</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Common.FunctionButton" parent="AppTheme">
    </style>

    <style name="Common.TextView" parent="AppTheme">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="Common.TinyTextView" parent="AppTheme">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="FeedBack.EditText" parent="AppTheme">
        <item name="android:background">@drawable/edittext_background_selector</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:minLines">5</item>
        <item name="android:padding">@dimen/view_common_padding</item>
        <item name="android:gravity">left|top</item>
    </style>

    <style name="FeedBack.CardView" parent="AppTheme">
        <item name="cardElevation">5dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardBackgroundColor">@color/colorFirstBackground</item>
    </style>

    <style name="Password.Pad" parent="AppTheme">
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@color/trans</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="mainLeftDrawerButton" parent="AppTheme">
        <item name="android:background">@drawable/trans_button_selector</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">@dimen/view_common_padding</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dialogActivity_bottom" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="loginButton" parent="AppTheme">
        <item name="android:background">@drawable/login_button_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>